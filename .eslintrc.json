{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  },
  "plugins": ["react"],
  "settings": {
    "import/core-modules": ["electron", "electron-devtools-installer"]
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "quotes": ["error", "double"],
    "no-underscore-dangle": "off",
    "object-curly-newline": "off",
    "react/prop-types": 0,
    "linebreak-style": ["error", "unix"],
    "semi": [2, "never"],
    "global-require": 0,
    "react/jsx-closing-bracket-location": [
      1,
      {
        "selfClosing": "line-aligned",
        "nonEmpty": "after-props"
      }
    ]
  }
}
